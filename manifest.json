{
    "manifest_version": 2,
    "name": "Nova Guia Redirect",
    "version": "1.0",
    "description": "Redireciona automaticamente a página de nova guia do navegador para uma URL configurada pelo usuário.",
    "icons": {
        "256": "img/icon.png",
        "128": "img/icon.png",
        "48": "img/icon.png",
        "16": "img/icon.png"
    },
    "author": "Samuel Edson",
    "chrome_url_overrides": {
        "newtab": "redirect.html"
    },
    "options_page": "options.html",
    "permissions": [
        "storage"
    ],
    "short_name": "Nova Guia"
}
